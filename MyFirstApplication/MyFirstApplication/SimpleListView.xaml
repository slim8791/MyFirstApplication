             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstApplication.SimpleListView">
    <ContentPage.Content>
        
        <ListView x:Name="listView" SeparatorVisibility="Default" SeparatorColor="Red">
            <ListView.ItemTemplate>
                <DataTemplate>

                    <!--<TextCell Text="{Binding Nom}" Detail="{Binding Poste}" TextColor="Blue" DetailColor="Green"></TextCell>-->
                    <ImageCell ImageSource="{Binding UrlImage}" Text="{Binding Nom}" Detail="{Binding Poste}" ></ImageCell>

</DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>