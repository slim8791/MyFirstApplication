<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstApplication.ImagePage">
    <ContentPage.Content>
        <StackLayout>
            <ActivityIndicator IsRunning="{Binding Source={x:Reference image}, Path=IsLoading}"></ActivityIndicator>
            <Image Source="http://lorempixel.com/1920/1080/sports/6/" x:Name="image" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>